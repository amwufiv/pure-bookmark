{
  "manifest_version": 3,
  "name": "Pure Bookmark",
  "version": "1.0.0",
  "description": "A clean bookmark manager in side panel",
  "permissions": [
    "bookmarks",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Toggle Bookmarks"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
